{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es6",
        "allowJs": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "noImplicitAny": false,
        "removeComments": true,
        "declaration": false,
        "sourceMap": true,
        "typeRoots": [
            "node_modules/@types", "src/types"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "test",
        "src/types",
        "src/test",
        "lib",
        "node_modules"
    ]
}